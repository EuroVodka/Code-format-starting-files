		"eslint-config-prettier": "^3.1.0",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-prettier": "^2.6.2",
		"eslint-plugin-react": "^7.11.1",
		"husky": "^1.0.0-rc.15",
		"lint-staged": "^7.3.0",
		"prettier": "^1.14.3",
		"prettier-eslint": "^8.8.2",
		"prettier-eslint-cli": "^4.7.1"
	},
	"lint-staged": {
		"src/**/*.{js,jsx,tsx,ts,json,css,md}": [
